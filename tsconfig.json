{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "types": ["react/next", "react-dom/next"]
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}